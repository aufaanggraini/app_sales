<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honda_wide"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="40dp"
            android:text="Tambah Kreditor"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/ambilPhoto"
            android:background="@drawable/placeholder_camera_green"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textSize="30dp"
            android:padding="70dp"/>

        <Button
            android:id="@+id/resetPhoto"
            android:layout_gravity="center_horizontal"
            android:text="Reset Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Nama"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/txtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:hint="Alamat/No.hp"
                android:textSize="20dp" />


        </LinearLayout>



        <TextView
            android:id="@+id/txtIdSales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Id Sales"
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />


        <CheckBox
            android:id="@+id/chDokumenLengkap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Dokumen Sudah Lengkap"/>


        <CheckBox
            android:id="@+id/chSiapSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Siap Di survey"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnTambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="#A9A9A9"
                android:text="Tambah"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_toRightOf="@+id/btnTambah"
                android:background="#A9A9A9"
                android:text="Cancel"
                android:textColor="#FFFFFF" />


        </RelativeLayout>
    </LinearLayout>

</ScrollView>